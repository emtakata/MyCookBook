<h1><%= @cuisine.name %></h1>

<% if @cuisine.recipes.empty? %>
  <h1>Nenhuma receita encontrada para este tipo de cozinha</h1>
<% else %>
  <% @cuisine.recipes.each do |recipe| %>
    <h1><%= recipe.title %></h1>
    <ul>
      <li><%= recipe.recipe_type %></li>
      <li><%= recipe.cuisine.name %></li>
      <li><%= recipe.difficulty %></li>
      <li><%= recipe.cook_time %> minutos</li>
    </ul>
  <% end %>
<% end %>

<%= link_to 'Voltar', root_path %>
<%= link_to 'Editar', edit_cuisine_path(@cuisine) %>
